@model PostVM
@{
    ViewData["Title"] = "تفاصيل"; 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>التفاصيل</h1>

<dvi>
    <h4>تفاصيل المشاركة</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">اسم المستخدم</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">الاسم الكامل</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">نوع المشاركه</dt>
        <dd class="col-sm-10">@Model.PostCategory</dd>

        <dt class="col-sm-2">العنوان</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">الوصف</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">الصورة</dt>
        <dd class="col-sm-10">
            <img src="~/UpLoadedFiles/Images/@Model.Image" width="200" height="200"/>
        </dd>

        <dt class="col-sm-2"> تاريخ الاضافه</dt>
        <dd class="col-sm-10">@Model.Date</dd>

    </dl>
</dvi>

<div>
    <a asp-action="Update" asp-route-id="@Model.Id">تعديل</a>
    <a asp-action="Index">الرجوع الى المشاركات</a>
</div>