@model IEnumerable<PostVM>
@{
    ViewData["Title"] = "المشاركات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>بيانات المشاركات</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">مشاركه جديدة</a>
</p>

