@model CategoryVM
@{
    ViewData["Title"] = "اضافه";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>اضافه صنف جديد</h1>
<h4>معلومات الصنف</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form-group">

            <div class="form-group">
                <label asp-for="Name">الاسم</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="اضافه" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index" class="text-danger">الرجوع الى قائمه الاصناف </a>
</div>

@section ValidationScripts
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}