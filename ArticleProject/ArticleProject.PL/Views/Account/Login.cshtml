@model AccountVM 
@{
    ViewData["Title"] = "تسجيل الدخول";

}

<h1>@ViewData["Title"]</h1>


<div class="row container" style="font-family:cairo, sans-serif" dir="rtl">   
    
    <h2>تسجيل دخول الحساب الخاص بك</h2>
   
    <div class="col-md-4">

        <form asp-controller="Account" asp-action="Login" class="form-group">

            <h6 style="direction:rtl" class="text-danger">@ViewData["error"]</h6>
            <div class="form-group">
                <label asp-for="UserName">البريد الالكترونى</label>
                <input type="text" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">كلمه المرور</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <br />
            <button type="submit" class="btn btn-primary px-lg-5">تسجيل</button>
            <br />
            <div class="form-group">
                <p>
                    <a asp-controller="Account" asp-action="ForgetPassword">هل نسيت كلمه المرور ؟</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section ValidationScripts
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}